#!/usr/bin/env bash
# bin/release <build-dir>
cat << EOF
addons: []
config_vars: []
default_process_types:
  web: java -jar jenkins.war --httpPort=\$PORT
EOF

bp_dir=$(cd $(dirname $0); cd ..; pwd)
JENKINS_HOME=/home/vcap/.jenkins
MAVEN_CONFIG_FILE=$bp_dir/files/hudson.tasks.Maven.xml
MAVEN_CONFIG_DEST=/home/vcap/.jenkins/hudson.tasks.Maven.xml

status "Create Jenkins home $JENKINS_HOME"
mkdir -p $JENKINS_HOME

status "Copy Maven config file $MAVEN_CONFIG_FILE to $MAVEN_CONFIG_DEST"
cp $MAVEN_CONFIG_FILE $MAVEN_CONFIG_DEST
